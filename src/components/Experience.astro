---
import { experiences } from '../data/experiences';
import SectionTitle from './ui/SectionTitle.astro';
---

<section id="experience" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-6">
    <SectionTitle 
      title="Professional Experience" 
      subtitle="A decade of building impactful software solutions"
    />
    
    <div class="max-w-4xl mx-auto space-y-12">
      {experiences.map((exp, index) => (
        <div 
          class="group relative bg-white dark:bg-gray-800 p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-300"
          data-aos={index % 2 === 0 ? "fade-right" : "fade-left"}
        >
          <div class="absolute top-0 left-0 w-2 h-full bg-blue-500 rounded-l-xl"></div>
          <div class="ml-2">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {exp.company}
            </h3>
            <p class="text-lg text-blue-600 dark:text-blue-400 mb-2">{exp.role}</p>
            <p class="text-gray-600 dark:text-gray-400 mb-4">{exp.period}</p>
            <p class="text-gray-700 dark:text-gray-300 mb-4">{exp.description}</p>
            
            <div class="mb-4">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Key Achievements:</h4>
              <ul class="list-disc list-inside space-y-1 text-gray-600 dark:text-gray-400">
                {exp.achievements.map(achievement => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
            
            <div class="flex flex-wrap gap-2">
              {exp.technologies.map(tech => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>