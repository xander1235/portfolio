---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-16" data-aos="fade-up">
  <h2 class="text-4xl font-bold text-gray-900 mb-4">{title}</h2>
  {subtitle && <p class="text-xl text-gray-600 max-w-2xl mx-auto">{subtitle}</p>}
</div>